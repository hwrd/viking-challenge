.page-header
  %h1 My Workouts

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %colgroup
      %col{class: 'col-md-2'}
      %col{class: 'col-md-8'}
      %col{class: 'col-md-2'}
    %thead
      %tr
        %th Date
        %th Distance
        %th

    %tbody
      - @workouts.each do |workout|
        %tr
          %td= workout.date
          %td= workout.distance
          %td
            = link_to workout, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-trash
              Delete

      - if @workouts.empty?
        %tr
          %td.text-center{colspan: 5}
            %p
              %strong
                You haven't logged any workouts...what are you waiting for?
            = link_to new_workout_path, :class => 'btn btn-primary btn-lg' do
              %span.glyphicon.glyphicon-plus
              New Workout